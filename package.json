{
	"name": "neural-copilot",
	"displayName": "Neural Copilot",
	"description": "Find snippets codes from Neural Copilot",
	"version": "0.0.1",
	"publisher": "ITEX",
	"keywords": [
		"code-suggestion",
		"copilot",
		"neural-copilot"
	],
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "NeuralCopilot.exchangeMode",
				"title": "Exchange Mode",
				"icon": {
					"dark": "src/images/dark/rightNavDark.svg",
					"light": "src/images/light/rightNavLight.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "NeuralCopilot.exchangeMode",
					"when": "true",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "neural-chat-sideBar",
					"title": "Neural Chat",
					"icon": "src/images/dark/leftBarDark.svg"
				}
			]
		},
		"views": {
			"neural-chat-sideBar": [
				{
					"id": "sideBar-home",
					"name": ""
				}
			]
		},
		"configuration": {
			"title": "NeuralCopilot",
			"type": "object",
			"properties": {
				"neuralCopilot.settings.sites.stackoverflow": {
					"title": "stackoverflow.com",
					"description": "Enable searching code in StackOverflow",
					"type": "boolean",
					"default": true
				},
				"neuralCopilot.settings.sites.githubGist": {
					"title": "gist.github.com",
					"description": "Enable searching code in Github Gists",
					"type": "boolean",
					"default": false
				},
				"neuralCopilot.settings.maxResults": {
					"type": "integer",
					"description": "Limit the max number of results",
					"default": 12
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"download-api": "vscode-dts dev",
		"postdownload-api": "vscode-dts main",
		"postinstall": "npx vscode-dts dev",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"prebuild": "npm run lint -- --fix",
		"build": "vsce package -o ./out-vsix",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/node": "^14.15.0",
		"@types/node-fetch": "^2.5.10",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"bufferutil": "^4.0.3",
		"esbuild": "^0.12.15",
		"eslint": "^7.21.0",
		"jest": "^27.5",
		"node-loader": "^2.0.0",
		"ts-jest": "^27.1.4",
		"ts-loader": "^9.2.3",
		"typescript": "^4.2.2",
		"utf-8-validate": "^5.0.5",
		"vscode-dts": "^0.3.3",
		"webpack": "^5.76.0",
		"webpack-cli": "^4.7.2"
	},
	"dependencies": {
		"@types/jsdom": "^16.2.12",
		"jsdom": "^16.6.0",
		"linkedom": "^0.11.1",
		"node-fetch": "^2.6.1",
		"typescript-language-server": "^0.5.4",
		"vsce": "^2.15.0",
		"vscode": "^1.1.37"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	}
}
